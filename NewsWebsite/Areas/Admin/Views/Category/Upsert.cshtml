@section Scripts {
    <script type="text/javascript" src="~/ckeditor/editor.js"></script>
    <script type="text/javascript" src="~/ckeditor/ckeditor.js"></script>

    <script>
        window.onload = function () {
            InitCKEditorFull('description');
        }
    </script>
}


