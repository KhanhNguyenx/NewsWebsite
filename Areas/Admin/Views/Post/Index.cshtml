<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Management</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
    font-family: 'Roboto', sans-serif;
    background-color: #FFFFFF;
    color: #333;
    margin: 0;
}

h1 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
}

.container {
    width: 100%;
}

.add-post-btn {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-bottom: 20px;
    transition: background-color 0.3s;
    float: right;
}

.add-post-btn:hover {
    background-color: #45a049;
}

.table-container {
    width: 100%;
    overflow-x: auto;
    margin-top: 20px;
}

table {
    width: 100%;
    border-collapse: collapse;
    background-color: #FFF;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

th, td {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #E0E0E0;
}

th {
    background-color: #F4F4F4;
    color: #333;
}

tr:hover {
    background-color: #F9F9F9;
}

.actions button {
    padding: 8px 12px;
    border-radius: 20px;
    border: none;
    cursor: pointer;
    font-size: 14px;
    width: 80px;
    text-align: center;
    margin-right: 5px;
}

.btn-edit {
    background-color: #007bff;
    color: white;
}

.btn-delete {
    background-color: #dc3545;
    color: white;
}

.btn-detail {
    background-color: #6c757d;
    color: white;
}

.pagination {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
}

.pagination button {
    padding: 10px;
    background-color: #F4F4F4;
    color: #333;
    border: 1px solid #CCC;
    border-radius: 5px;
    cursor: pointer;
}

.pagination button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.pagination select {
    padding: 10px;
    background-color: #F4F4F4;
    color: #333;
    border: 1px solid #CCC;
    border-radius: 5px;
}

    </style>
</head>
<body>

    <div class="container">
        <h1>Posts List</h1>
        <button class="add-post-btn" onclick="window.location.href='/admin/post/add'">Add Post</button>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Slug</th>
                        <th>Category ID</th>
                        <th>Status</th>
                        <th>Views</th>
                        <th>Is Hot</th>
                        <th>Likes</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example of one post row -->
                    <tr>
                        <td>1</td>
                        <td>Example Post Title</td>
                        <td>example-post-title</td>
                        <td>1</td>
                        <td>Published</td>
                        <td>102</td>
                        <td>Yes</td>
                        <td>23</td>
                        <td>Short description of the post.</td>
                        <td class="actions">
                            <button class="btn-edit" onclick="editPost(1)">Edit</button>
                            <button class="btn-delete" onclick="deletePost(1)">Delete</button>
                            <button class="btn-detail" onclick="viewDetail(1)">Detail</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="pagination">
            <div class="pages">
                <button>&laquo;</button>
                <button>1</button>
                <button>2</button>
                <button>3</button>
                <button>&raquo;</button>
            </div>
        </div>
    </div>

    <script>
        function editPost(id) {
            window.location.href = '/admin/post/edit/' + id;
        }

        function deletePost(id) {
            if (confirm('Are you sure you want to delete this post?')) {
                // Logic for deleting the post
                console.log('Post with ID ' + id + ' deleted.');
            }
        }

        function viewDetail(id) {
            window.location.href = '/admin/post/detail/' + id;
        }
    </script>

</body>
</html>
