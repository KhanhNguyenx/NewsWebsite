@model NewsWebsite.Helpers.LoginM
@{
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html class="h-full light" data-theme="true" data-theme-mode="light" lang="en">
<head>
    <title>Metronic - Tailwind CSS Sign In</title>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
    <link href="~/Signin/css/styles.bundle.css" rel="stylesheet">
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-52YZ3XGZJ6"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'G-52YZ3XGZJ6');
    </script>
</head>
<body class="antialiased flex h-full text-base text-gray-700 dark:bg-coal-500">
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
        <div class="card max-w-[370px] w-full">
            <form asp-action="Logins" method="post" class="card-body flex flex-col gap-5 p-10" id="sign_in_form">
                <div class="text-center mb-2.5">
                    <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">Đăng nhập</h3>
                    <div class="text-danger" asp-validation-summary="All"></div>
                </div>
                
                <div class="flex flex-col gap-1">
                    <label asp-for="@Model.UserName" class="form-label font-normal text-gray-900"></label><sup>*</sup>
                    <input asp-for="@Model.UserName" class="input" placeholder="Tên người dùng">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
                
                <div class="flex flex-col gap-1">
                    <label asp-for="@Model.Password" class="form-label font-normal text-gray-900"></label><sup>*</sup>
                    <div class="input" data-toggle-password="true">
                        <input asp-for="@Model.Password" class="form-control" placeholder="Mật khẩu" type="password">
                        <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                            <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden"></i>
                            <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block"></i>
                        </button>
                    </div>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                
                <label class="checkbox-group">
                    <input class="checkbox checkbox-sm" name="RememberMe" type="checkbox">
                    <span class="checkbox-label">Remember me</span>
                </label>
                
                <button type="submit" class="btn btn-primary flex justify-center grow">Đăng nhập</button>
                
                <div class="text-center mt-3">
                    <a href="#" class="text-sm link">Quên mật khẩu?</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/Signin/js/core.bundle.js"></script>
    <script src="~/Signin/js/apexcharts.min.js"></script>
    <script>
        async function handleGoogleCallback() {
            const params = new URLSearchParams(window.location.search);
            const token = params.get('token');
            if (token) {
                localStorage.setItem('jwt', token);
                window.location.href = "/dashboard";
            }
        }
        window.onload = handleGoogleCallback;
    </script>
</body>
</html>
