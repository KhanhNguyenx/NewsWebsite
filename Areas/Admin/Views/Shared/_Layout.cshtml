    <script>
        var $window = $(window);
        var nav = $('.fixed-button');
        $window.scroll(function () {
            if ($window.scrollTop() >= 200) {
                nav.addClass('active');
            }
            else {
                nav.removeClass('active');
            }
        });
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Lấy URL hiện tại
            var currentUrl = window.location.pathname; // Ví dụ: '/admin/category'

            // Kiểm tra xem URL có chứa '/admin/' hay không và lấy phần sau '/admin/'
            var section = currentUrl.split('/admin/')[1]; // Ví dụ: 'category'

            if (section) {
                // Loại bỏ class 'active' khỏi tất cả các <li> trước
                var activeItems = document.querySelectorAll('li.active');
                activeItems.forEach(function (item) {
                    item.classList.remove('active');
                });

                // Tìm thẻ <li> chứa đường dẫn tương ứng
                var menuItem = document.querySelector('a[href="/admin/' + section + '"]').closest('li');

                // Nếu tìm thấy <li>, thêm class 'active'
                if (menuItem) {
                    menuItem.classList.add('active');
                }
            }
        });
    </script>
